{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}}</h1>
 
  

  <div class="container">
       
		<form method="post" action="/update">
		  <div class="form-group">
		    <label for="exampleInputEmail1">Name</label>
           <input type="hidden" class="form-control" name="id"value="{{data._id}}" >
		    <input type="text" class="form-control" name="item"value="{{data.item}}" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
		    
		  </div>
		  <div class="form-group">
		    <label for="exampleInputPassword1">Quantity</label>
		    <input type="text" class="form-control" name="qty" value="{{data.qty}}" id="exampleInputPassword1" placeholder="Quantity">
		  </div>
		  <div class="form-group">
		    <label for="exampleInputPassword1">Prices</label>
		    <input type="text" class="form-control" name="price" value="{{data.price}}" id="exampleInputPassword1" placeholder="Price">
		  </div>
		 
		  
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
  
   </div>
{% endblock %}
